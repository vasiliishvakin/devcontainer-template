{
    "name": "Python DevContainer",
    "dockerComposeFile": "../compose.yaml",
    "service": "python",
    "workspaceFolder": "/workspace",
    "remoteEnv": {
        "compose": "docker compose"
    },
    "shutdownAction": "none",
    "postCreateCommand": "python -m pip install -r /workspace/.devcontainer/python/requirements.txt",
    "customizations": {
        "vscode": {
            "settings": {
                "python.analysis.extraPaths": [
                    "/workspace/app/python"
                ],
                "python.defaultInterpreterPath": "/usr/local/bin/python",
            },
            "extensions": [
                "bierner.markdown-mermaid",
                "charliermarsh.ruff",
                "christian-kohler.path-intellisense",
                "codezombiech.gitignore",
                "donjayamanne.python-environment-manager",
                "dotenv.dotenv-vscode",
                "EditorConfig.EditorConfig",
                "esbenp.prettier-vscode",
                "Gruntfuggly.todo-tree",
                "howardzuo.vscode-favorites",
                "jasonlhy.hungry-delete",
                "marlom.keep-context",
                "matthewpi.caddyfile-support",
                "micnil.vscode-checkpoints",
                "ms-azuretools.vscode-docker",
                "ms-python.autopep8",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "naumovs.color-highlight",
                "njpwerner.autodocstring",
                "oderwat.indent-rainbow",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "runtfuggly.todo-tree",
                "samuelcolvin.jinjahtml",
                "streetsidesoftware.code-spell-checker-hebrew",
                "streetsidesoftware.code-spell-checker-russian",
                "streetsidesoftware.code-spell-checker-scientific-terms",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "Tyriar.sort-lines",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode-completions",
                "VisualStudioExptTeam.vscodeintellicode",
                "yzhang.markdown-all-in-one",
                "ZainChen.json"
            ]
        }
    }
}
