{
    "name": "Node DevContainer",
    "dockerComposeFile": "../compose.yaml",
    "service": "node",
    "workspaceFolder": "/workspace/app/node",
    "remoteEnv": {
        "compose": "docker compose"
    },
    "shutdownAction": "none",
    "postCreateCommand": "cd /workspace/app/node && npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "bierner.markdown-mermaid",
                "christian-kohler.path-intellisense",
                "codezombiech.gitignore",
                "dbaeumer.vscode-eslint",
                "dotenv.dotenv-vscode",
                "EditorConfig.EditorConfig",
                "esbenp.prettier-vscode",
                "Gruntfuggly.todo-tree",
                "howardzuo.vscode-favorites",
                "jasonlhy.hungry-delete",
                "marlom.keep-context",
                "matthewpi.caddyfile-support",
                "micnil.vscode-checkpoints",
                "ms-azuretools.vscode-docker",
                "naumovs.color-highlight",
                "njpwerner.autodocstring",
                "oderwat.indent-rainbow",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "runtfuggly.todo-tree",
                "samuelcolvin.jinjahtml",
                "streetsidesoftware.code-spell-checker-hebrew",
                "streetsidesoftware.code-spell-checker-russian",
                "streetsidesoftware.code-spell-checker-scientific-terms",
                "streetsidesoftware.code-spell-checker",
                "Tyriar.sort-lines",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode-completions",
                "VisualStudioExptTeam.vscodeintellicode",
                "wix.vscode-import-cost",
                "yzhang.markdown-all-in-one",
                "ZainChen.json"
            ]
        }
    }
}
